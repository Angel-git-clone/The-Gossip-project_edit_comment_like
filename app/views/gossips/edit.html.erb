<h1 style="padding:25px">Edit your Gossip</p></h1>

<div class="card border-info mb-3" style="margin: 25px" >
  <div class="form-group">
    <%= form_tag url_for(action: 'update'), method: "put" do %>
      <%# <%= label_tag 'titre du gossip' <br> %>
  </div>

  <div class="form-group" style="padding:10px">
    <h3>Title of your Gossip :</h3>
    <%= @gossips.title %>
    <br>
    <%= text_field_tag 'title'%>
  </div>

  <div class="form-group mt-3" style="padding:10px">
    <h3>Quotation of your Gossip :</h3>
    <%=@gossips.content%>
    <br>
    <%= text_area_tag 'content' %> 
  </div>

</div> 
<div style="margin: 25px">  
  <%= submit_tag "Soumet ton gossip" %>
  <% end %>
</div>